
@using VTYS_PROJE.Entities.Concrete;
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Katalog</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-plot-listing.css">
    <link rel="stylesheet" href="~/assets/css/animated.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <!--

    TemplateMo 564 Plot Listing

    https://templatemo.com/tm-564-plot-listing

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    @Html.Partial("~/Views/Partials/Header.cshtml")
    <!-- ***** Header Area End ***** -->

    <div class="main-banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="top-text header-text">
                        <h6>@ViewBag.DataCount Aktif İlna</h6>
                        <h2>Ardığın Ürün Kriterleri</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form id="search-form" name="gs" method="submit" role="search" action="http://localhost:5000/catalog/search">
                        <div class="row">
                            <div class="col-lg-3 align-self-center">
                                <fieldset>
                                    <select name="category" class="form-select" id="chooseCategory" onchange="this.form.click()">
                                        <option value="0" style="display: none;">Katagori</option>
                                        @foreach (Category item in ViewBag.CategoryList)
                                        {
                                            <option value="@item.id">@item.category_name</option>
                                        }
                                    </select>
                                </fieldset>
                            </div>

                            <div class="col-lg-3 align-self-center">
                                <fieldset>
                                    <input type="text" name="search_txt" class="searchText" id="search_txt" placeholder="Ürün">
                                </fieldset>
                            </div>

                            <div class="col-lg-3 align-self-center">
                                <fieldset>
                                    <select name="type" class="form-select" id="chooseType" onchange="this.form.click()">
                                        <option value="0" style="display: none;">Ürün tipi/modeli</option>
                                        @foreach (ProductType item in ViewBag.ProductTypeList)
                                        {
                                            <option value="@item.id" id="@item.category_id">@item.type_name</option>
                                        }
                                    </select>
                                </fieldset>
                            </div>

                            <div class="col-lg-3">
                                <fieldset>
                                    <button class="main-button"><i class="fa fa-search"></i> Ara</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-10 offset-lg-1">
                    <ul class="categories">
                        <li><a href="http://localhost:5000/catalog/search?category=1"><span class="icon"><img src="~/assets/images/search-icon-03.png" alt="Vehicle"></span> Araba</a></li>
                        <li><a href="http://localhost:5000/catalog/search?category=3"><span class="icon"><img src="~/assets/images/search-icon-04.png" alt="Shopping"></span> Mutfak</a></li>
                        <li><a href="http://localhost:5000/catalog/search?category=2"><span class="icon"><img src="~/assets/images/search-icon-05.png" alt="Travel"></span> Bilgisayar</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sub-footer">
                        <p>
                            Copyright © 2021 Sahibinde
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/owl-carousel.js"></script>
    <script src="~/assets/js/animation.js"></script>
    <script src="~/assets/js/imagesloaded.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/js/catalog.js"></script>

</body>

</html>
